  "Interface"i
syntax on
set nocompatible
set background=dark
set mouse=a                      "mouse support"
set ttymouse=xterm
set nu                           "line number"
set backspace=indent,eol,start
set t_Co=256
set lazyredraw

"Search"
set ignorecase
set smartcase
set incsearch

set wildmenu                    "autocomplete"
set autoread                    "autoread in case of change"


  "Indentation"
set wrap
set autoindent
set smartindent
set shiftround
set smarttab
set shiftwidth=4                "4 spaces indentation"
set softtabstop=4               "4 spaces per tabs"
set tabstop=2

"Space instead of tabs"
set expandtab
set nojoinspaces

set encoding=utf8
set directory=~/.vim-tmp/
set showmatch
set cursorline

